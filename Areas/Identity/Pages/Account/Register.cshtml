@page
@model CoronaCheckIn.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="row  m-auto">
    <div class="col-sm-2 col-md-3 col-lg-3 "></div>
    <div class="col-sm-8 col-md-6 col-lg-5 px-4 mt-5 rounded-3" style="background-color: white">
        <form class="h-100" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class=" text-center mt-3 mb-3">
                <h1 style="color: #9551FE">@ViewData["Title"]</h1>
            </div>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-column">
            <div class="form-floating mb-4">
                <input asp-for="Input.Email" class="form-control mb-1" autocomplete="username" aria-required="true"/>
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.Firstname" class="form-control mb-1" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.Firstname"></label>
                <span asp-validation-for="Input.Firstname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.Lastname" class="form-control mb-1" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.Lastname"></label>
                <span asp-validation-for="Input.Lastname" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.Password" class="form-control mb-1" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control mb-1" autocomplete="new-password" aria-required="true"/>
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            </div>
            <div class="mb-1">
                <button id="registerSubmit" type="submit" class="w-100 text-light btn btn-lg" style="background-color:#9551FE ">Register</button>
            </div>
            <div class="text-center my-3">
                <a class="link-dark" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Already have an account? Sign in</a>
            </div>
            
        </form>
    </div>
    <div class="col-sm-2 col-md-3 col-lg-3 "></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
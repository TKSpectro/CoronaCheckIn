@page
@using CoronaCheckIn.Areas.Identity.Pages.Account.Manage
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CoronaCheckIn.Areas.Identity.Pages.Account.Manage.IndexModel

@{
    ViewData["Title"] = SharedLocalizer["Settings"].Value;
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage"/>
<div class="row">
    <div class="col-md-7 m-auto">
        <h3 class="mb-3">@SharedLocalizer["Profile"]</h3>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating  mb-3">
                <input asp-for="Username" class="form-control" disabled/>
                <label asp-for="Username" class="form-label">@SharedLocalizer["Username"]</label>
            </div>
            <div class="form-floating  mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control"/>
                <label asp-for="Input.PhoneNumber" class="form-label">@SharedLocalizer["PhoneNumber"]</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating  mb-3">

                <input asp-for="Roles" class="form-control" disabled/>
                <label asp-for="Roles" class="form-label">@SharedLocalizer["Roles"]</label>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg text-light" style="background-color:#9551FE ">@SharedLocalizer["Save"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
@page
@model CoronaCheckIn.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Login";
}
<div class="row h-100 m-auto">
    <div class="col-sm-2 col-md-3 col-lg-3 "></div>
    <div class="col-sm-8 col-md-6 col-lg-5 h-50 px-4 mt-5 rounded-3" style="background-color: white">

        <section class="h-100">
            <form class="h-100 position-relative"id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class=" text-center mt-3 mb-3">
                    <h1 style="color: #9551FE">@ViewData["Title"]</h1>
                </div>
                <div class="h-50 d-flex flex-column  justify-content-around ">
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating ">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"/>
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                </div>

                <div class="h-25 d-flex flex-column justify-content-around">
                    <div class="checkbox d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <label asp-for="Input.RememberMe" class="form-label m-0">
                                <input class="form-check-input" asp-for="Input.RememberMe"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div>
                            <a class="link-dark" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </div>
                    </div>
                    <button id="login-submit" type="submit" class="w-100 text-light btn btn-lg mb-4" style="background-color:#9551FE ">Log in</button>
                </div>
                <div class="text-center mt-3">
                    <a class="link-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </div>
                @* <p> *@
                @*     <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> *@
                @* </p> *@
            </form>

        </section>
    </div>
    <div class="col-sm-2 col-md-3 col-lg-4 "></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
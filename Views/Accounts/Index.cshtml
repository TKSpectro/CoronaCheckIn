@model IEnumerable<Account>

@Localizer["Accounts"]
<a href="/accounts/create">Create</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">@SharedLocalizer["Username"]</th>
            <th scope="col">@SharedLocalizer["Email"]</th>
            <th scope="col">@SharedLocalizer["Password"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
        <tr>
            <th scope="row">@account.Id</th>
            <td>@account.Username</td>
            <td>@account.Email</td>
            <td>@account.Password</td>
            <td>
                <img src="~/lib/bootstrap-icons/icons/trash.svg" 
                    alt="Delete" width="32" height="32" class="btn btn-sm btn-danger"
                    onclick="deleteAccount('@account.Id')"
                >
            </td>
        </tr>
        }
    </tbody>
</table>

<script>
    // call delete endpoint
    function deleteAccount(id) {
        var url = "/accounts/delete/" + id;
        $.ajax({
            url: url,
            type: "DELETE",
            success: function () {
                window.location.reload();
            }
        });
    }
</script>
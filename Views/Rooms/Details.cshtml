@model Room

<div class="container">
    <div class="row">

        <h1>@SharedLocalizer["Room"]: @Model.Name</h1>
        <p>@SharedLocalizer["MaxParticipants"]: @Model.MaxParticipants</p>
        <p>@SharedLocalizer["MaxDuration"]: @Model.MaxDuration @SharedLocalizer["Minutes"]</p>
        <p>@SharedLocalizer["Faculty"]: @Model.Faculty</p>

        <h2>QR-Code</h2>
    </div>
    <div class="row">
        <div class="col-md-3">
            <img src="data:image;base64,@System.Convert.ToBase64String(@ViewBag.QrCode)" id="qrcode" class="img-fluid" style="image-rendering: pixelated;"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 d-grid gap-2 mt-2">
            <button type="button" class="btn btn-outline-primary btn-block" onclick="generateQrCode()">
                <span>Neu generieren</span>
            </button>
        </div>
    </div>    
    <div class="row">    
        <h2>Sessions</h2>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">

       function generateQrCode() {
          $.ajax({
            url: "/rooms/GenerateQrCode",
            success: function (data) {
                document.getElementById('qrcode').src = 'data:image/png;base64,' + data;
            },
            error: function (error) {
              alert("Error: " + error);
            }
          })
        }
    </script>
}